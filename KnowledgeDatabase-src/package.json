{
  "name": "knowledgedatabase-src",
  "version": "1.0.0",
  "description": "An Electron application with Vue and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "--" : "----------工具脚本----------",
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "generate:types": "node scripts/generate-preload-types.mjs",
    "generate:icons": "node scripts/generate-icons.mjs",
    "---" : "----------调试脚本----------", 
    "start": "electron-vite preview",   
    "predev": "npm run generate:types",
    "dev": "node scripts/run-with-logger.mjs --name dev -- electron-vite dev",
    "dev:raw": "electron-vite dev",
    "dev:trace": "cross-env LOG_LEVEL=debug SURREALDB_LOG_LEVEL=trace npm run dev",
    "dev:debug": "cross-env LOG_LEVEL=debug SURREALDB_LOG_LEVEL=debug npm run dev",
    "dev:info": "cross-env LOG_LEVEL=info SURREALDB_LOG_LEVEL=info npm run dev",
    "dev:warn": "cross-env LOG_LEVEL=warn SURREALDB_LOG_LEVEL=warn npm run dev",
    "dev:error": "cross-env LOG_LEVEL=error SURREALDB_LOG_LEVEL=error npm run dev",
    "----" : "----------构建脚本----------",
    "prebuild": "npm run generate:types && npm run generate:icons",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.3.9",
    "express": "^5.2.1",
    "@langchain/core": "^0.3.0",
    "@langchain/langgraph": "^0.2.0",
    "@langchain/openai": "^0.5.0",
    "marked": "^17.0.1",
    "openai": "^6.16.0",
    "pinia": "^3.0.4",
    "surrealdb": "^1.3.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "autoprefixer": "^10.4.23",
    "cross-env": "^7.0.3",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.2",
    "npm-run-all": "^4.1.5",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "sharp": "^0.33.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vue": "^3.5.25",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
